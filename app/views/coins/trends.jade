extends ../layouts/main.jade
block styles
	link(rel="stylesheet",href="/styles/main.css")
	link(rel="stylesheet" href="/styles/trends.css")
block scripts
	script(src="scripts/trends.js")
block header
	.status
		i.fa.fa-refresh(title="Refresh",onclick="window.location.href=window.location.href")
block body
	table(cellpadding="0",cellspacing="0")
		tr
			th Name
			th Code
			th USD
			th MXN
			//- th Trend
			//- th Moving
			th Action
		for item in coins
			tr
				td: div #{item.name}
				td: div #{item.code}
				td: div #{item.usd}
				td: div #{item.mxn}
				//- td: div #{item.status.trend}
				//- td: div #{item.status.movement}
				td: div #{item.action}
