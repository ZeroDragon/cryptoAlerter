@import 'app/assets/styles/fonts.styl'
body
	margin 0
	font-family Arial, sans-serif
	min-width 680px
	*
		box-sizing border-box
header
	background-color #eee
	border-bottom 1px solid #ddd
	box-shadow 0px 1px 5px #aaa
	.adder
		display inline-block
	.status
		float right
		i
			color #ccc
			margin-left 10px
			&:hover, &.active
				color #444
footer
	display block
	clear both
	margin 5px 0
	width 100%
	text-align center
	font-size 12px
	a
		color inherit
		line-height 42px
		vertical-align middle
		&:hover
			img
				width 40px
		img
			vertical-align middle
			width 0
			border-radius 50%
			transition all 0.5s ease
.modal
	display none
	position fixed
	top 0
	left 0
	width 100%
	height 100%
	background-color rgba(0,0,0,0.4)
	.gparent
		position relative
		width 100%
		height 100%
		.parent
			position absolute
			top 50%
			left 50%
			-webkit-transform translate(-50%,-50%)
			min-width 600px
			height 400px
			background-color #fff
			border-radius 10px
			padding 20px
			text-align center
			.son
				position relative
			.close
				position absolute
				top -30px
				right -30px
				border-radius 50%
				width 25px
				height 25px
				background-color #000
				color #fff
				font-size 15px
				line-height 23px
				cursor pointer
			
.container
	margin auto
	max-width 1200px
	padding 10px 20px
.items
	width 100%
	float left
	.item
		padding 4px 0
		position relative
		.botones
			position absolute
			top 7px
			left 4px
			height 19px
			background-color #445
			&>div
				display inline-block
				width 15px
				height 15px
				border-radius 50%
				text-align center
				font-size 10px
				line-height 14px
				vertical-align top
				cursor pointer
				&:hover
					color #fff
			.cerrar
				background-color #fc6356
				margin 2px 2px 2px 4px
				color #fc6356
			.minimizar
				background-color #27ca45
				margin 2px 4px 2px 2px
				color #27ca45