.hidden
	display none

.notice, .message
	padding 10px
	border 1px solid #004B8E
	background-color #D1EFFF
	border-radius 6px
	margin-bottom 10px
	color #004B8E

.message
	border 1px solid #000
	background-color #E0E0E0
	color #000
	position relative
	.confirming
		position absolute
		right 10px
		top 12px
		font-size 12px

.btn
	width 100%
	border 1px solid #004B8E
	background-color #D1EFFF
	color #004B8E
	padding 4px
	text-align center
	margin-bottom 4px
	border-radius 6px
	cursor pointer
	&.success
		border 1px solid #004B8E
		background-color #D1FFDD
		color #008E76

.row2
	font-size 0
	.col2, .col10
		display inline-block
		font-size 16px
		padding 0 4px
		vertical-align top
	.col2
		width (100/12*2)%
	.col10
		width (100/12*10)%

.login
	font-size 20px

.confirm, .username
	font-size 20px
	border 1px solid #ccc
	border-radius 6px
	padding 4px
	background-color #fff

.confirm
	margin-left 5px
	cursor pointer
	&:hover
		background-color #ccc
.adder
	margin-left 10px
a
	color inherit

.alerts
	.item
		padding 4px
		background-color #eee
		border 1px solid #ddd
		margin 10px 0
		position relative
		.delete
			position absolute
			top -10px
			right -10px
			border-radius 50%
			background-color #000
			color #fff
			text-align center
			width 20px
			height 20px
			line-height 19px
			cursor pointer
		.text
			display inline-block
			width 130px